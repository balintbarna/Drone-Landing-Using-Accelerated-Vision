<?xml version="1.0" ?>
<sdf version="1.5">
  <model name='custom_iris'>
    <include>
      <uri>model://iris</uri>
    </include>

    <include>
      <uri>model://custom_cam</uri>
      <pose>0.1 0 0 0 1.5708 0</pose>
    </include>
    <joint name="depth_camera_joint" type="revolute">
      <child>custom_cam::link</child>
      <parent>iris::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>
  </model>
</sdf>
